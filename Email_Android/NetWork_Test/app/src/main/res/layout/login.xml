<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/relativeLayout"
            android:text="\@pikaqiu.com"
            android:textSize="18dp"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/login_edit_account"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/logo"
            android:src="@drawable/logo"
            android:background="#ffffff"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/login_edit_account"
            app:layout_constraintRight_toRightOf="@+id/login_edit_pwd"
            android:layout_marginTop="8dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/login_edit_account"
            android:layout_width="0dp"
            android:layout_height="60dp"

            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:hint="请输入您的用户名"
            android:inputType="textPersonName"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="178dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView4"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_edit_pwd"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:hint="请输入您的密码"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_edit_account"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="记住密码"
            android:id="@+id/Login_Remember"
            android:checked="false"
            android:textSize="15dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_pwd"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_edit_pwd"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="修改密码"
            android:id="@+id/login_text_change_pwd"
            android:textSize="15dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="308dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_pwd"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/login_btn_login"
            android:onClick="finish_login"
            android:background="#545bcb"
            android:textSize="20dp"
            android:textColor="#ffffff"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/login_edit_pwd"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/login_edit_pwd"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="8dp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_register"
            android:text="注册"
            android:onClick="resetpwd"
            android:textColor="#ffffff"
            android:background="#e52525"
            android:textSize="20dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/login_btn_login"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/login_btn_login"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/login_btn_login"/>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
